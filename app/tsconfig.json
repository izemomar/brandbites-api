{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6"],
    "typeRoots": ["node_modules/@types", "./src/shared/utils/types/*"],
    "types": ["node", "jest"],
    "baseUrl": "./src",
    "paths": {
      "@": ["."],
      "@database/*": ["database/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["shared/utils/*"],
      "@shared-middlewares/*": ["shared/infrastructure/http/middlewares/*"]
    },
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    //"strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": [""],
  "esModuleInterop": true
}
