{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6"],
    "typeRoots": ["node_modules/@types", "./src/shared/utils/types/*"],
    "baseUrl": "./src",
    "paths": {
      "@": ["src"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["shared/utils/*"],
      "@sharedMiddlewares/*": ["shared/infrastructure/http/middlewares/*"]
    },
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"],
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "esModuleInterop": true
}
